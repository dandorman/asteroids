defscrollback 10000

# Use | for the escape char
escape \034\034

bindkey "^[," prev
bindkey "^[." next

termcapinfo xterm|xterm-color ti@:te@

screen -t bash

screen -t express
stuff "coffee server.coffee\015"

screen -t guard
stuff "bundle exec rake guard\015"

select 0

startup_message off
autodetach on
hardstatus alwayslastline
hardstatus string '%{=b kb}---[ Asteroids %{+b}%{W}%H %{b}] %= %{=kw}%?%-Lw%?%{b}(%{W}%n*%f%t%?(%u)%?%{b})%{w}%?%+Lw%?%?%= %{b}[ %{+b}%{W}%H %{b}]-----'
